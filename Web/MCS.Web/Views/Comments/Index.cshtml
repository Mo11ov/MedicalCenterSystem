@model CommentsListViewModel

@{
    this.ViewData["Title"] = "Comments";
}

<div class="container mt-5 mb-5">
    <div class="row height d-flex justify-content-center align-items-center">
        <div class="col-md-7">
            <div class="card">
                <div class="p-3">
                    <h6>Comments</h6>
                </div>
                <div class="mt-2">
                    @foreach (var comment in Model.Comments)
                    {
                        <div class="d-flex flex-row p-3">
                            <img src="@comment.OwnerImgUrl" width="40" height="40" class="rounded-circle mr-3">
                            <div class="w-100">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="d-flex flex-row align-items-center">
                                        <span class="mr-2">@comment.OwnerName</span>
                                    </div>
                                    <small>@comment.CreatedDate @comment.CreatedTime</small>
                                </div>
                                <p class="text-justify comment-text mb-1">"@comment.Content"</p>
                                <div class="d-flex flex-row user-feed">
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<div class="text-center">
    <a button type="button" class="btn btn-outline-success" asp-area="" asp-controller="Comments" asp-action="Create">Create Comment</a>
</div>

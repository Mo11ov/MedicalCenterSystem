@model AppointmentInputModel

@{
    this.ViewData["Title"] = "Appointments";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="MakeAppointment" method="post">
            <div class="mb-3">
                <label asp-for="@Model.Date" class="form-label">Pick up date for appointment</label>
                <input asp-for="@Model.Date" class="form-control" aria-required="true" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
@*            <div class="mb-3">
                <label asp-for="@Model.DoctorId" class="form-label">Pick up date for appointment</label>
                <input asp-for="@Model.DoctorId" class="form-control" aria-required="true" />
                <span asp-validation-for="DoctorId" class="text-danger"></span>
            </div>*@
            <div class="mb-3">
                <input class="btn btn-success" type="submit" value="Make an appointment" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
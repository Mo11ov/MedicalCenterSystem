@model PrescriptionInputModel

@{
    this.ViewData["Title"] = "Create Prescription";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />
<div class="container-fluid">
    <form asp-area="Doctor" asp-controller="Prescription" asp-action="Create" method="post">
        <div class="row">
            <div class="col-lg-6">
                <div class="mb-3">
                    <label asp-for="PatientId" class="form-label">Choose patient:</label>
                    <select asp-for="PatientId" class="form-control">
                        @foreach (var patient in Model.Users.Users)
                        {
                            <option value="@patient.Id">@patient.FirstName @patient.LastName</option>
                        }
                    </select>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="mb-3">
                    <label asp-for="@Model.Treatment" class="form-label">Treatment:</label>
                    <textarea asp-for="@Model.Treatment" class="form-control" aria-required="true" rows="5"></textarea>
                    <span asp-validation-for="Treatment" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3">
                <input class="btn btn-outline-success" type="submit" value="Create Prescription" />
            </div>
        </div>
    </form>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}